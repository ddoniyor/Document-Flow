<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/letters_item_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_margin="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/letters_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Айди документа:"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/letters_item_id_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:maxLines="4"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/letters_item_id"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/letters_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Название документа:"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/letters_item_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:maxLines="3"
                    android:layout_toEndOf="@+id/letters_item_name"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/letters_item_sender"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Отправитель:"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:id="@+id/letters_item_sender_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:maxLines="3"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/letters_item_sender"
                    />
            </RelativeLayout>
