<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/profile_layout_margin"
    android:layout_marginRight="@dimen/profile_layout_margin"
    android:paddingTop="30dp"
    tools:context=".view.fragment.profile.ProfileFragment">

    <TextView
        android:id="@+id/profile_fragment_title"
        style="@style/fragment_text_firstly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/profile" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profile_fragment_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/profile_fragment_title"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</RelativeLayout>