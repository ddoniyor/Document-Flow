<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_search"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.documentflow.view.fragment.search.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_detailDocumentsFragment"
            app:destination="@id/detailDocumentsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailDocumentsFragment"
        android:name="com.example.documentflow.view.fragment.documents.DetailDocumentsFragment"
        android:label="fragment_detail_documents"
        tools:layout="@layout/fragment_detail_documents" />

</navigation>